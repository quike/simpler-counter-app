# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[{Makefile,*.defs}]
indent_style = tab

# Dart files
[*.dart]
# Maximum line length
max_line_length = 80
# Use single quotes for strings
ij_dart_prefer_single_quotes = true
# Organize imports
ij_dart_organize_imports = true
# Use trailing commas in lists and maps
ij_dart_use_trailing_commas = true
